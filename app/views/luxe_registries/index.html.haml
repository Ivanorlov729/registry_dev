.row.luxe-registry-page
  = render 'layouts/page_top_header'
  .row.second-row
    .registry-list
      %label.page-title My Registries
      %label The following is a list of your registries.
      %label Click on a registrant's name or registry number to view.
      %br/
      %br/
      %table.table
        %thead
          %tr
            %th Registry#
            %th Registrant
            %th Co-Registrant
            %th Event
            %th Event Date
            %th Actions
        %tbody.registry-content
          - @luxe_registries.each do |luxe_registry|
            %tr
              %td= luxe_registry.id
              %td= luxe_registry.registrant_name
              %td= luxe_registry.co_registrant_name
              %td= luxe_registry.event.name
              %td= luxe_registry.event_date.strftime('%m/%d/%Y')
              %td
                /= link_to 'Show', luxe_registry, :class=>"btn btn-mini"
                = link_to 'Edit', edit_luxe_registry_path(luxe_registry), :class=>"btn btn-mini"
                = link_to 'Delete', luxe_registry, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class=>"btn btn-mini btn-danger"
      %br
      .row.last-row
        = link_to 'New Registry', new_luxe_registry_path, :class=>"new-registry"
